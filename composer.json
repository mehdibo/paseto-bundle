{
    "name": "mehdibo/paseto-bundle",
    "description": "A Bundle to use Paseto tokens",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehdi Bounya",
            "email": "mehdi.bounya@gmail.com"
        }
    ],
    "keywords": [
        "paseto",
        "symfony",
        "bundle",
        "symfony-bundle"
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "symfony/framework-bundle": "^5.2",
        "paragonie/paseto": "^1.1",
        "symfony/yaml": "^5.2",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.76",
        "squizlabs/php_codesniffer": "^3.5",
        "infection/infection": "^0.25.5"
    },
    "autoload": {
        "psr-4": { "Mehdibo\\Bundle\\PasetoBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Mehdibo\\Bundle\\PasetoBundle\\Tests\\": "tests/" }
    },
    "scripts": {
        "infection" : "XDEBUG_MODE=coverage ./vendor/bin/infection --initial-tests-php-options=\"-d zend_extension=xdebug.so\""
    }
}
